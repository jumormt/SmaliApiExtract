<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@id/openfile_scroll" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RadioGroup android:id="@id/radioGroup" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <RadioButton android:textSize="20.0sp" android:id="@id/unicode" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Unicode" />
                <RadioButton android:textSize="20.0sp" android:id="@id/utf8" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="UTF-8" />
                <RadioButton android:textSize="20.0sp" android:id="@id/gbk" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="GBK" />
                <RadioButton android:textSize="20.0sp" android:id="@id/custom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/encode_custom" />
            </RadioGroup>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20.0sp" android:gravity="center" android:id="@id/customEncodingGuide" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/encode_customEncoding" />
                <EditText android:enabled="false" android:textSize="20.0sp" android:id="@id/customEncoding" android:focusable="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Custom Encoding" android:editable="true" android:layout_weight="1.0" android:imeOptions="actionDone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>